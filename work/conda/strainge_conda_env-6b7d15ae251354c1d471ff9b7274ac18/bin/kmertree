    if not fileName.endswith(".hdf5"):
        fileName += ".hdf5"
    print('Saving tree to', fileName)
    with h5py.File(fileName, 'w') as h5:
        tree.saveHdf5(h5, compress = True)

if args.text:
    with open(args.text, 'w') as outtext:
        tree.saveText(outtext)

